# AWS Container Platform Demo environment variables
# copy this file to .env and adjust values as needed

# demo mode (always true for this demo)
DEMO_MODE=true

# port configuration
# 3000 -> frontend
# 8000 -> api
FRONTEND_PORT=3000
BACKEND_PORT=8000

# API configuration
API_BASE_URL=http://localhost:8000

# AWS credentials (used only if DEMO_MODE=false)
AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID=PLACEHOLDER  # replace if connecting to AWS
# AWS_SECRET_ACCESS_KEY=PLACEHOLDER  # replace if connecting to AWS

# app config
FLASK_DEBUG=false
APP_NAME=Container Platform Demo
APP_VERSION=1.0.0

# logging
LOG_LEVEL=INFO
