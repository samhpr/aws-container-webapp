# Container Platform Demo Environment Variables
# Copy this file to .env and adjust values as needed

# Demo Mode (always true for this demo)
DEMO_MODE=true

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=8000

# API Configuration
API_BASE_URL=http://localhost:8000

# AWS Configuration (used only if DEMO_MODE=false)
AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID=PLACEHOLDER  # Not needed in demo mode
# AWS_SECRET_ACCESS_KEY=PLACEHOLDER  # Not needed in demo mode

# Application Configuration
FLASK_DEBUG=false
APP_NAME=Container Platform Demo
APP_VERSION=1.0.0

# Database (if implementing persistent storage)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=demo_db
# DB_USER=demo_user
# DB_PASSWORD=PLACEHOLDER

# External Services (if needed)
# EXTERNAL_API_KEY=PLACEHOLDER
# EXTERNAL_API_URL=https://example.com/api

# Logging Level
LOG_LEVEL=INFO
